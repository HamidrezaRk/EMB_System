@model emb_project.Entity.User
@{
    Layout = null;
}
<form asp-controller="UserManagement" asp-action="Delete" method="post">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h5 class="modal-title">حذف کاربر</h5>
    </div>

    <div class="modal-body form-horizontal">
        آیا از حذف کاربر با نام @ViewBag.Name مطمئن هستید؟
    </div>

    <input name="id" id="id" type="hidden" value="@ViewBag.user_id" />
    <div class="modal-footer" style="text-align:left;">
        <button class="btn btn-default" type="button" data-dismiss="modal">برگشت</button>
        <button class="btn btn-danger" type="submit">
            حذف
        </button>
    </div>
</form>
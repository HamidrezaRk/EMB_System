@model emb_project.Viewmodel.CategoryViewModel

<div class="row center-block box box-primary">
    <div class="col-md-8 col-lg-8 offset-2" style="margin-bottom:15px; margin-top:15px;">

        <div class="card card-info">
            <div class="card-header">
                <h3 class="card-title">فرم ایجاد دسته بندی</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form asp-area="AdminPanel" asp-controller="Category" asp-action="Create" method="post">
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="Title" class="control-label"></label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                </div>
                <!-- /.card-body -->
                <div class="card-footer">
                    <button type="submit" class=" btn btn-outline-primary">ایجاد</button>
                    <a asp-action="Index" class="btn btn-outline-danger float-left">بازگشت</a>
                </div>
                <!-- /.card-footer -->

            </form>

            @if (ViewBag.SuccessMessage != "")
            {
                <span style="color:green;">
                    @ViewBag.SuccessMessage
                </span>
            }
        </div>
    </div>
</div>
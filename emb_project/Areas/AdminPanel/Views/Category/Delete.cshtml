@model emb_project.Entity.Category
@{
    Layout = null;
}

<form asp-controller="Category" asp-action="Delete" method="post">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h5 class="modal-title">حذف دسته بندی</h5>
    </div>

    <div class="modal-body form-horizontal">
        آیا از حذف دسته بندی با نام @ViewBag.Cat_Name مطمئن هستید؟
    </div>

    <input name="id" id="id" type="hidden" value="@ViewBag.Cat_id" />
    <div class="modal-footer" style="text-align:left;">
        <button class="btn btn-default" type="button" data-dismiss="modal">برگشت</button>
        <button class="btn btn-danger" type="submit">
            حذف
        </button>
    </div>
</form>
